<div class="tab-pane fade  show active" id="edit-item" role="tabpanel" aria-labelledby="profile-tab">
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Judul</label>
          <input type="text" class="form-control" name="title" value="<%= item.title %>" placeholder="Masukan Judul"
            required>
        </div>
        <div class="form-group">
          <label for="name">Harga</label>
          <input type="number" class="form-control" name="price" value="<%= item.price %>" placeholder="Masukan Harga"
            required>
        </div>
        <div class="form-group">
          <label for="name">Kota</label>
          <input type="text" class="form-control" name="city" value="<%= item.city %>" placeholder="Masukan Kota"
            required>
        </div>
        <div class="form-group">
          <label for="name">Kategori</label>
          <select class="form-control" name="categoryId">
            <option value="<%= item.categoryId._id %>">--- <%= item.categoryId.name %> ---</option>
            <% for(let i = 0; i< category.length; i++){ %>
            <option value="<%= category[i].id %>"><%= category[i].name %></option>
            <%}%>
          </select>
        </div>
        <div class="form-group">
          <label for="name">Photo</label>
          <input type="file" class="form-control" name="image" multiple>
        </div>
        <div class="form-group">
          <label for="name">Deskripsi</label>
          <textarea name="about" class="form-control"><%= item.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>
  </div>
</div>